<div class="modal fade" id="showCart" tabindex="-1" aria-labelledby="cartLabel" aria-hidden="true" style="font-size: '16px';">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="cartLabel">Carrito de Compras</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="lista-carrito">
            <div class="table-responsive">
                <table class="table">
                  <thead id="cart-head">
                    <tr>
                      <th colspan="3">Producto</th>
                      <th scope="col">Precio</th>
                      <th scope="col">SubTotal</th>
                    </tr>
                  </thead>
                  <tfoot id="cart-footer">
                    <tr>
                      <th colspan="4"  class="text-end" id="totaltitle">TOTAL:</th>
                      <th >
                        <h5 id="total"></h5>
                      </th>
                    </tr>
                  </tfoot>
                    <tbody>
                      <span id="cart-empty" class="text-danger">El carrito no tiene productos agregados</span>
                    </tbody>
                   
                  </table>
              </div>
        </div>
        <div class="modal-footer">
            <button type="button" onclick="limpiarCarrito()" class="btn btn-sm btn-danger" id="btn-delete-cart">Vaciar carrito</button>
            <button type="button" class="btn btn-sm btn-success" data-bs-dismiss="modal">Seguir comprando</button>
            <a href="/compra" class="btn btn-sm btn-primary" id="btn-next-buy"> Finalizar compra</a>
        </div>
      </div>
    </div>
  </div>